{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",

    "target": "ES2020",
    "lib": ["ES2020"],

    "outDir": "dist/server",
    "esModuleInterop": true,

    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
